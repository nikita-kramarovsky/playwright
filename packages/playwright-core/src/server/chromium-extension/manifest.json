{
  "name": "Playwright",
  "description": "Uses the chrome.contextMenus API to customize the context menu.",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions":[
    "https://*/*", 
    "http://*/*" 
  ],
  "incognito": "split",
  "background": {
    "service_worker": "menu.js"
  },
  "icons": {
    "16": "images/logo-16.png",
    "48": "images/logo-32.png",
    "128": "images/logo-128.png"
  },
  "manifest_version": 3
}